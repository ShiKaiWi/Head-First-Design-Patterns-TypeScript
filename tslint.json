{
    "extends": "tslint:recommended",
    "rulesDirectory": ["."],
    "rules": {
        "max-line-length":  [120],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines":[true, 1],
        "no-console": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
    },
    "jsRules": {
        "max-line-length": [120]
    }
}